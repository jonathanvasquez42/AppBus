<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.nombrempresa.appfun">

    <!-- Permisos AplicaciÃ³n -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Fun on wheels"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pelicula.ReproduccionPeliculaActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_reproduccion_pelicula"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".InfoEmpresa.videoSeguridad.VideoSeguridadActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_video_seguridad"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".musica.ReproduccionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".InfoEmpresa.AcercaDe.AcercadeActivity"
            android:label="@string/title_activity_acercade"
            android:theme="@style/AppTheme.NoActionBar">Nosotros</activity>
    </application>

</manifest>